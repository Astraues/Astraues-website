{
  "version": 2,
  "builds": [
    { "src": "index.html",  "use": "@vercel/static" },
    { "src": "mobile.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/mobile",      "dest": "/mobile.html" },
    { "src": "/mobile.html", "dest": "/mobile.html" },
    { "src": "/(.*)",        "dest": "/index.html"  }
  ]
}